{
  "n_iters_per_epoch": 100,
  "experiment": "msegm_predict",
  "dataset": "wmhs",
  "dataset_cached": true,
  "dataset_task": "msegm",
  "split": "cv_111",
  "split__params": {
    "n_splits": 5,
    "val_size": 5
  },
  "model_core": "deepmedic_orig",
  "model_core__params": {
  "n_parts": [1, 2, 1]
  },

  "loss": "sigmoid_cross_entropy",
  "predict": "sigmoid",
  "optimizer": "AdamOptimizer",

  "batch_iter": "3d_augm_patch_strat",
    "batch_iter__params": {
    "batch_size": 8,
    "x_patch_sizes": [[25, 25, 25], [57, 57, 57]],
    "y_patch_size": [9, 9, 9],
    "nonzero_fraction": 0.95,
    "buffer_size": 20
  },

  "train": "train_with_lr_decrease",
  "train__params": {
    "n_epochs": 40,
    "lr_init": 0.1,
    "lr_dec_mul": 0.7,
    "patience": 5,
    "rtol": 0.03,
    "atol": 0.01
  }
